<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context=".ActivityPurchaseAdd"
    tools:showIn="@layout/activity_purchase_add"
    android:background="#4dd2e1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Колибри-удобный список покупок в твоем телефоне"
        android:id="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="10dp"
        android:typeface="serif"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить покупку"
        android:id="@+id/pok"
        android:layout_marginBottom="139dp"
        android:background="#ffffff"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#4dd2e1"
        android:layout_above="@+id/textView3"
        android:layout_alignLeft="@+id/editText5"
        android:layout_alignStart="@+id/editText5"
        android:layout_marginRight="40dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText5"
        android:textAlignment="center"
        android:hint="Введите имя списка"
        android:textColorHint="#ffffff"
        android:backgroundTint="#ffffff"
        android:typeface="serif"
        android:textIsSelectable="false"
        android:textColor="#ffffff"
        android:layout_above="@+id/pok"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:layout_above="@+id/editText5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/hdf"
        android:layout_marginBottom="140dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Создание списка покупок"
        android:id="@+id/textView8"
        android:layout_above="@+id/editText5"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:typeface="serif"
        android:layout_marginBottom="110dp"
        android:textStyle="italic" />

</RelativeLayout>
